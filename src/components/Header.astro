</header>

<script>
    const navLinks = document.querySelectorAll('header.md\\:flex .nav-link');

    navLinks.forEach(link => {
        link.addEventListener('click', (e) => {
            e.preventDefault(); // Para pruebas, evitar navegaciÃ³n inmediata

            // Quitar clase activa a todos
            navLinks.forEach(l => {
                l.classList.remove('bg-[#222]', 'text-primary');
                l.classList.add('bg-white', 'text-accent');
            });

            // Activar el clicado
            link.classList.remove('bg-white', 'text-accent');
            link.classList.add('bg-[#222]', 'text-primary');
        });
    });
</script>
